{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/db/*": [
          "src/db/*"
      ],
      "@/components/ui/*": [
        "./src/components/ui/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "next",
      "express",
      "axios",
      "ws"
    ],
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true,  // Dekoratörleri etkinleştir
    "emitDecoratorMetadata": true   // Dekoratör metadatasını etkinleştir
  },
  "include": [
    "src/**/*.{ts,tsx,js,jsx}",
    "server.ts",
    "data.ts",
    "next.config.ts",
    "vite.config.ts",
    "src/app/layout.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "**/*.md",
    "./node_modules/@libsql/hrana-client/README.md",
    "./node_modules/@libsql/hrana-client/.LICENSE",
    "**/*.LICENSE",
    "**/*.js.map",
    "**/*.jsx.map"
  ]
}
